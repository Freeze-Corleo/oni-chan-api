// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email      String     @unique
  password   String
  phone      String     @unique
  address    Address[]
  createdAt  DateTime
  updatedAt  DateTime
  googleAuth Boolean
  verifyUser Boolean
  emailCode  String
  browser    String
  status     String
  godFather  String
  profilUrl  String
  resetToken String
  corrId     String
  isBanned   Boolean
  uuid       String      @id
}

model Address {
  street  String
  number  String
  city    String
  zipCode String
  uuid    String @id
  User    User   @relation(fields: [userId], references: [uuid])
  userId  String
}